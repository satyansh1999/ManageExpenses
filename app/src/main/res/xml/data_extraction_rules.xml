<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+)
   This file defines which data should be included/excluded in backups and device-to-device transfers.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app data in cloud backups -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude sensitive data from cloud backups -->
        <exclude domain="sharedpref" path="device.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include app data in device-to-device transfers -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="." />
    </device-transfer>
</data-extraction-rules>

